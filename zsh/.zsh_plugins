# Set Homebrew prefix depending on the OS
if [[ "$(uname)" == "Darwin" ]]; then
  export HOMEBREW_PREFIX="/opt/homebrew"
elif [[ "$(uname)" == "Linux" ]]; then
  export HOMEBREW_PREFIX="/home/linuxbrew/.linuxbrew"
else
  echo "HOMEBREW_PREFIX is missing"
  # export HOMEBREW_PREFIX=""  # fallback or unknown
fi

# Optionally add to PATH if not already included
# if [[ -n "$HOMEBREW_PREFIX" && ":$PATH:" != *":$HOMEBREW_PREFIX/bin:"* ]]; then
